{% extends 'base.html.twig' %}

{% block title %}
    Connexion
    
{% endblock %}

{% block body %}

    <div class="container">

        <div class="row">
            <div class="col-md-3">
                &nbsp;
                            
            </div>
            <div class="col-md-6">
                <div class="bg-light py-3 px-3">

                    <h1>
                        Connexion
                                        
                    </h1>

                    <form method="post">
                        <div class="form-group">
                            <label for="username">
                                Email
                                                        
                            </label>
                            <input type="text" class="form-control" placeholder="Adresse email" name="_username" id="username" />
                        </div>
                        <div class="form-group">

                            <label for="password">
                                Mot de passe
                                                        
                            </label>
                            <input type="password" class="form-control" placeholder="Mot de passe" name="_password" id="password" />
                        </div>
                        <div class="form-group">

                            <button type="submit" class="btn btn-primary">
                                Login !
                                                        
                            </button>
                            <a class="btn btn-link" href="/">
                                Retour
                                                        
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
